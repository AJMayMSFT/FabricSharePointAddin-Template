<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="ms-NavBar ms-bgColor-themeDarker">
        <div class="ms-NavBar-openMenu js-openMenu ms-bgColor-themeDarker">
            <i class="ms-Icon ms-Icon--menu ms-bgColor-themeDarker ms-borderColor-white"></i>
        </div>
        <ul class="ms-NavBar-items ms-fontColor-white">
            <li class="ms-NavBar-item ms-borderColor-white--hover @( ViewBag.Current=="Home"? "is-selected" : "")">@Html.ActionLink("Home", "Index", "Home", new { @class = "ms-NavBar-link ms-font-l ms-fontColor-white" })</li>
            <li class="ms-NavBar-item ms-borderColor-white--hover @( ViewBag.Current=="About"? "is-selected" : "")">@Html.ActionLink("About", "About", "Home", new { @class = "ms-NavBar-link ms-font-l ms-fontColor-white" })</li>
            <li class="ms-NavBar-item ms-borderColor-white--hover ms-NavBar-item--hasMenu @( ViewBag.Current=="Contact"? "is-selected" : "")">
                <a class="ms-NavBar-link ms-font-l ms-fontColor-white" href="#">Contact</a>
                <i class="ms-NavBar-chevronDown ms-Icon ms-Icon--chevronDown"></i>
                <ul class="ms-ContextualMenu">
                    <li class="ms-ContextualMenu-item">
                        @Html.ActionLink("Get in touch", "Contact", "Home", new { @class = "ms-ContextualMenu-link ms-font-m" })
                    </li>
                    <li class="ms-ContextualMenu-item"><a class="ms-ContextualMenu-link ms-font-m" href="#">Our locations</a></li>
                    <li class="ms-ContextualMenu-item"><a class="ms-ContextualMenu-link ms-font-m" href="#">Job vacancies</a></li>
                </ul>
            </li>            
        </ul>
    </div>
    <div class="ms-Grid">
        @RenderBody()
        <div class="ms-Grid-row spacer">
            <hr />
            <div class="ms-Grid-col ms-u-lg10">
                <footer class="ms-Grid-row ms-font-s">
                    <div class="ms-Grid-col ms-u-lg10 ms-u-push1">
                        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
                    </div>
                </footer>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/spcontext")
    @Scripts.Render("~/bundles/fabric")
    @RenderSection("scripts", required: false)
</body>
</html>
